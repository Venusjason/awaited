{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelog": {
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "allowBranch": ["master"]
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/demos/**",
    "**/fixtures/**",
    "**/dist/**",
    "**/lib/**",
    "**/es/**",
    "**/test/**"
  ]
}
